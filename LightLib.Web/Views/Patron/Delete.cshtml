@model LightLib.Web.Models.Patron.PatronDetailModel
@{
	ViewBag.Title = $"Patron: {@Model.LastName}, {@Model.FirstName}";
}


<div class="row">
	<section>
		<h1>
			<b>Are you sure you want to delete this user?</b>
		</h1>
			<!-- <div class="form-action">
				<input type="submit" value="Delete" class="btn-secondary btn-primary" />
			</div>
		-->
		<form asp-page-handler="button" method="post">
			<button class="btn btn-primary btn-sm">Yes</button>
			<button class="btn btn-primary btn-sm">No</button>
		</form>
		
		<br/>
	</section>
</div>

<section>
	<div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
		<div class="row">
			<div class="col-md-8 px-0">
				<h1 class="display-1 fw-bold">@Model.FirstName @Model.LastName</h1>
				<p class="lead my-3">Member for @Model.HasBeenMemberFor</p>
			</div>
			<div class="col-4">
				<h4>Patron Info</h4>
				<table class="table table-sm table-dark text-white">
					<tr>
						<td>Address</td>
						<td>@Model.Address</td>
					</tr>
					<tr>
						<td>Telephone</td>
						<td>@Model.Telephone</td>
					</tr>
					<tr>
						<td>Email</td>
						<td>@Model.Email</td>
					</tr>
				</table>
			</div>
		</div>
	</div>
</section>

<hr />

<section>
	<div class="container">
		<div class="row">
			<div class="col-6">
				<h4>Current Checked Out Assets</h4>
				@if (!Model.AssetsCheckedOut.Results.Any()) {
					<p>
						No items checked out.
					</p>
				} else {
					<table class="table table-sm">
					</table>
				}
			</div>
			<div class="col-6">
				<h4>Current Holds</h4>
				@if (!Model.Holds.Results.Any()) {
					<p>
						No items currently on hold.
					</p>
				} else {
					<table class="table table-sm">
					</table>
				}
			</div>
		</div>
	</div>
</section>

<hr />